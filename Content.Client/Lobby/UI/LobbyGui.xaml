<!-- STELLAR STATION CHANGES BEGIN -->
<lobbyUi:LobbyGui
    xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:maths="clr-namespace:Robust.Shared.Maths;assembly=Robust.Shared.Maths"
    xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    xmlns:vote="clr-namespace:Content.Client.Voting.UI"
    xmlns:style="clr-namespace:Content.Client.Stylesheets"
    xmlns:lobbyUi="clr-namespace:Content.Client.Lobby.UI"
    xmlns:info="clr-namespace:Content.Client.Info"
    xmlns:widgets="clr-namespace:Content.Client.UserInterface.Systems.Chat.Widgets"
    xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client">
    <SplitContainer Name="ScreenContainer" HorizontalExpand="True" VerticalExpand="True" SplitWidth="0" StretchDirection="TopLeft">
        <LayoutContainer Name="ViewportContainer" HorizontalExpand="True" VerticalExpand="True">
            <controls:MainViewport Name="MainViewport"/>
            <BoxContainer Name="ExtraContainer" Orientation="Horizontal" VerticalExpand="True" HorizontalExpand="True" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0">
                <PanelContainer StyleClasses="BackgroundPanel" HorizontalExpand="True" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
                    <BoxContainer Orientation="Vertical" Margin="5">
                        <BoxContainer Name="PlaytimeContainer" Access="Public" HorizontalAlignment="Center" Visible="False">
                            <RichTextLabel Name="PlaytimeComment" Access="Public" HorizontalAlignment="Center"/>
                        </BoxContainer>
                        <BoxContainer HorizontalAlignment="Center">
                            <RichTextLabel Name="LobbySong" Access="Public" HorizontalAlignment="Center" />
                            <RichTextLabel Name="LobbyBackground" Access="Public" HorizontalAlignment="Left" />
                        </BoxContainer>
                    </BoxContainer>
                </PanelContainer>
            </BoxContainer>
            <BoxContainer Name="VoteContainer" Orientation="Vertical">
                <BoxContainer Name="VoteMenu" Access="Public" Orientation="Vertical"/>
            </BoxContainer>
        </LayoutContainer>
        <PanelContainer Name="SeparatedChatPanel" MinWidth="300">
            <PanelContainer.PanelOverride>
                <graphics:StyleBoxFlat BackgroundColor="#2B2C3B" />
            </PanelContainer.PanelOverride>
                <BoxContainer Orientation="Vertical" HorizontalExpand="True" SeparationOverride="5" Margin="15">
                        <!-- First Button Bar -->
                        <BoxContainer Orientation="Horizontal" MinSize="0 20" HorizontalAlignment="Center">
                            <Button Name="AHelpButton" Access="Public"
                                    Text="{Loc 'ui-lobby-ahelp-button'}" />
                            <vote:VoteCallMenuButton Name="CallVoteButton" />
                            <Button Name="OptionsButton" Access="Public"
                                    Text="{Loc 'ui-lobby-options-button'}" />
                            <Button Name="LeaveButton" Access="Public"
                                    Text="{Loc 'ui-lobby-leave-button'}" />
                        </BoxContainer>
                        <!-- Second Button Bar -->
                        <BoxContainer Orientation="Horizontal" MinSize="0 10" HorizontalAlignment="Center">
                            <Button Name="RulesButton" Access="Public"
                                    Text="{Loc 'ui-lobby-stellar-rules'}" />
                            <Button Name="GuidebookButton" Access="Public"
                                    Text="{Loc 'ui-lobby-stellar-guidebook'}" />
                            <Button Name="ChangelogButton" Access="Public"
                                    Text="{Loc 'ui-lobby-stellar-changelog'}" />
                        </BoxContainer>
                        <!-- Character Preview -->
                        <lobbyUi:LobbyCharacterPreviewPanel Name="CharacterPreview" Access="Public" Visible="True"/>
                            <Label Name="StartTime"
                            Access="Public"
                            Align="Center"
                            FontColorOverride="{x:Static maths:Color.DarkGray}"
                            HorizontalExpand="True" />
                        <BoxContainer Orientation="Horizontal">
                            <cc:UICommandButton
                            Command="observe"
                            Name="ObserveButton"
                            Access="Public"
                            Text="{Loc 'ui-lobby-observe-button'}"
                            HorizontalExpand="True"
                            WindowType="{x:Type lobbyUi:ObserveWarningWindow}"
                            Margin="5"/>
                            <Button
                            Name="ReadyButton"
                            Access="Public"
                            ToggleMode="True"
                            Text="{Loc 'ui-lobby-ready-up-button'}"
                            HorizontalExpand="True"
                            Margin="5"/>
                        </BoxContainer>
                        <widgets:ChatBox Name="Chat" Access="Public" VerticalExpand="True" Margin="3" MinHeight="50" />
                </BoxContainer>
        </PanelContainer>
    </SplitContainer>
    <Control Access="Public" Visible="False" Name="CharacterSetupState" VerticalExpand="True" HorizontalExpand="True" />
</lobbyUi:LobbyGui>
<!-- STELLAR STATION CHANGES END -->

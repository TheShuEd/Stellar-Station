<widgets:ResourceBarsUI
    xmlns="https://spacestation14.io"
    xmlns:widgets="clr-namespace:Content.Stellar.Client.ResourceBars"
    Name="ResourceBarsInterface"
    HorizontalAlignment="Stretch"
    HorizontalExpand="True">

    <BoxContainer HorizontalAlignment="Stretch"
                  HorizontalExpand="True">
        <BoxContainer Name="LeftContainer"
                      HorizontalAlignment="Left"
                      HorizontalExpand="True"
                      VerticalAlignment="Bottom"
                      Orientation="Vertical"
                      SeparationOverride="2" />
        <BoxContainer Name="MiddleContainer"
                      HorizontalAlignment="Center"
                      HorizontalExpand="True"
                      VerticalAlignment="Bottom"
                      Orientation="Vertical"
                      SeparationOverride="2" />
        <BoxContainer Name="RightContainer"
                      HorizontalAlignment="Right"
                      HorizontalExpand="True"
                      VerticalAlignment="Bottom"
                      Orientation="Vertical"
                      SeparationOverride="2" />
    </BoxContainer>

</widgets:ResourceBarsUI>
